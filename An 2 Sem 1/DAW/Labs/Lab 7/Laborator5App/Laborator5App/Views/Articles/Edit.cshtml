@model Laborator5App.Models.Article


@{
    ViewBag.Titlu = "Edit";
}


@using (Html.BeginForm(actionName: "Edit", controllerName: "Articles"))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.Hidden("Id")

    @Html.Label("Title", "Titlu articol")
    <br />
    @Html.EditorFor(m => m.Title, new { @class = "form-control"})
    @Html.ValidationMessage("Title", null, new { @class = "text-danger" })
    <br />
    @Html.Label("Content", "Continut articol")
    <br />
    @Html.Editor("Content", new { htmlAttributes = new { @class = "form-control"} })
    @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
    <br /><br />
    @Html.Label("Selectati Categoria")
    <br />
    @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categ, "Value", "Text"),
        "Selectati categoria", new { @class = "form-control" })
    @Html.ValidationMessage("CategoryId", null, new { @class = "text-danger" })
    <br />
    <button class="btn btn-success" type="submit">Modifica articol</button>
}


