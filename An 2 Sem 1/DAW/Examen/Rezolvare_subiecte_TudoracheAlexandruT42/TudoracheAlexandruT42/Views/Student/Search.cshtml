

@{
    ViewBag.Title = "Search";
}

<h2>Cautare studenti</h2>

<form asp-controller="Campaign" asp-action="Search" method="get" action="/Student/SearchRes">
    <label>Nume</label>
    <input type="text" name="nume_cautat">
    <label>Domeniu</label>
    <select name="dom">
        @foreach (var domeniu in ViewBag.Domenii)
        {
            <option value=@domeniu.Value> @domeniu.Text </option>
        }
    </select>
    <button class="btn btn-success" type="submit">Cauta student</button>
</form>