@model TudoracheAlexandruT42.Models.Student

@{
    ViewBag.Title = "New";
}

<h2>Adaugare Student</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Student"))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.Label("Nume", "Nume Student")
    <br />
    @Html.TextBox("Nume", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Nume, null, new { @class = "text-danger" })
    <br /><br />
    @Html.Label("Email", "Email Student")
    <br />
    @Html.TextBox("Email", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
    <br /><br />
    @Html.Label("DateNastere", "Data nasterii")
    <br />
    <input type="date" name="DataNastere">
    //@Html.TextArea("DateStart", null, new { @class = "form-control" })
    @Html.ValidationMessage("DateNastere", null, new { @class = "text-danger" })
    <br /><br />
    @Html.Label("Selectati domeniul")
    <br />
    @Html.DropDownListFor(m => m.DomainId, new SelectList(Model.Dom, "Value", "Text"),
    "Selectati domeniul", new { @class = "form-control"})
    @Html.ValidationMessage("DomainId", "", new { @class = "text-danger" })
    <br />
    <button class="btn btn-success" type="submit">Adauga student</button>
}