@model Laborator5App.Models.Article


@{
    ViewBag.Titlu = "Edit";
}


<form method="post" action="/Articles/Edit/@Model.Id">
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.Hidden("Id")

    @Html.Label("Title", "Titlu articol")
    <br />
    @Html.Editor("Title")
    <br />
    @Html.Label("Content", "Continut articol")
    <br />
    @Html.Editor("Content")
    <br /><br />
    @Html.Hidden("Date")
    @Html.Label("Selectati Categoria")
    <br />
    @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categ, "Value", "Text"),
    "Selectati categoria", new { @class = "form-control"})
    <br />
    <button class ="btn btn-success" type="submit">Modifica articol</button>
</form>


